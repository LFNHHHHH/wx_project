/* 轮播 */
.container,
.container swiper,
.container image{
  width: 100%;
  height: 360rpx
}

/* 九宫格导航 */
.nav{
  display: flex;
  flex-wrap: wrap
}
.itemcon{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33%;
  height: 200rpx;
  border-bottom: 1rpx solid #ddd
}
.itemcon image{
  width: 80rpx;
  height: 80rpx
}
.itemcon text{
  font-size: 14px;
  margin-top: 15rpx
}

/* 商家推荐、交友论坛 */
.index_enter{
  display: flex;
  padding: 20rpx 25rpx;
}
.index_img{
  display: flex;
  width: 50%;
  justify-content: center
}
.index_enter image{
  width: 320rpx;
  height: 178rpx
}